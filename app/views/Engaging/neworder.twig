        <div style="padding-bottom: 2px;padding-top: 2px;" id="block_93">
            <div class="new_order-block ">
                <div class="bg"></div>
                <div class="divider-top"></div>
                <div class="divider-bottom"></div>
                <div class="container">
                    <div class="row new-order-form">
                        <div class="col-lg-7">
                            <div class="component_form_group component_card component_radio_button">
                                <div class="card ">
                                    {% if error %}
                                    <div class="alert alert-dismissible alert-danger">
                                        {{ errorText }}
                                    </div>
                                    {% endif %}

                                    {% if data["order"]["success"] == 1 %}
                                    <div class="alert alert-dismissible alert-success">
                                        <strong> {{ lang["neworder.success.id"] }}: </strong> {{ data['order']['id'] }} <br>
                                        <strong> Dịch vụ </strong> {{ data['order']['service'] }} <br>
                                        <strong> Link </strong> {{ data['order']['link'] }} <br>
                                        <strong> Số lượng </strong> {{data['order']['quantity']}} <br>
                                        <strong> Giá tiền: </strong> {{ data['order']['price'] }} <br>
                                        <strong> Số dư: </strong>{{ data['order']['balance'] }} <br>
                                    </div>
                                    {% endif %}
                                    {% if data["order"]["success"] == 2 %}
                                    <div class="alert alert-dismissible alert-success">
                                        <strong> {{ lang["neworder.success.id"] }}: </strong> {{ data['order']['id'] }} <br>
                                        <strong> {{ lang["neworder.success.service"] }}: </strong> {{ data['order']['service'] }} <br>
                                        <strong> {{ lang["neworder.success.username"] }}: </strong> {{ data['order']['link'] }} <br>
                                        <strong> {{ lang["neworder.success.quantity"] }}: </strong> {{ data['order']['min'] }} - {{ data['order']['max'] }} <br>
                                        <strong> {{ lang["neworder.success.posts"] }}: </strong> {{ data['order']['posts'] }} <br>
                                        <strong> {{ lang["neworder.success.delay"] }}: </strong>{{ data['order']['delay'] }} <br>
                                    </div>
                                    {% endif %}


                                    <div class="well">


                                        <form method="post" action="">
                                            <div class="component_button_forms">
                                                <div class="form-group">
                                                    <label for="orderform-category" class="control-label">{{ lang["neworder.category"] }}</label>

                                                    <select class="form-control" id="neworder_category" name="categories" data-select="true" data-select-search="true" data-select-search-placeholder="Search" data-select-container="#select-category-container" tabindex="-1" aria-hidden="true">
                                                        {{ category_html_simplify }}

                                                    </select>
                                                    <div id="select-category-container" class="position-relative"></div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="orderform-service" class="control-label">{{ lang["neworder.service"] }}</label>
                                                <select class="form-control" id="neworder_services" name="services" data-select="true" data-select-search="true" data-select-search-placeholder="Search" data-select-container="#select-service-container" tabindex="-1" aria-hidden="true">
                                                    <option value="1">Không tìm thấy dịch vụ nào trong danh mục này</option>
                                                </select>
                                                <div id="select-service-container" class="position-relative"></div>
                                            </div>










                                            <div id="neworder_fields"></div>
                                            <div class="form-group" id="charge_div">
                                                <label for="charge" class="control-label">{{ lang["neworder.charge"] }}</label>
                                                <input type="text" class="form-control" id="charge" readonly>
                                            </div>










                                            <button type="submit" class="btn btn-block btn-primary">Đặt hàng</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <br>
                    <div class="component_content_card component_content_button component_content_headers">
                        {% if news %}
                        <div class="card">
                            <div class="headsir"><i class="fal fa-newspaper mr-2"></i>Thông báo mới nhất</div>
                            <div class="ssw">
                                {% for new in news %}
                                <div class="news-item">
                                    <div class="news-details">
                                        <p class="news-date"><i class="fad fa-calendar-alt mr-1" style="--fa-secondary-opacity: 0.65;"></i>{{ new['news_date'] }}</p>
                                        <h4 class="news-title">
                                            <span class="icon-container">
                                                <img width="30" class="news-icon-inline" src="{{ new['news_icon'] }}" alt="News Icon">
                                            </span>
                                            {{ new['news_title'] }}
                                        </h4>
                                        <p class="news-content">{{ new['news_content'] }}</p>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    {% endif%}

                    <div class="component_content_card component_content_button component_content_headers">
                    </div>
                    {% if contentText2 %}
                    <div class="card">
                        {{ contentText2 }}
                    </div>
                    {% endif %}

                </div>
            </div>
        </div>
