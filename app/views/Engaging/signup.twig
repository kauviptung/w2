{% include 'header.twig' %}






   <div class="wrapper-content">
    <div class="wrapper-content__header">
          </div>
    <div class="wrapper-content__body">
      <!-- Main variables *content* -->
      <div id="block_2">
    <div class="sign-in">
        <div class="bg"></div>
        <div class="divider-top"></div>
        <div class="divider-bottom"></div>
        <div class="container">
            <div class="row sign-up-center-alignment">
                <div class="col-md-10 col-lg-6">
                    <div class="component_card">
                        <div class="card">
			
					 {% if errorText %}
        <div class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          {{ errorText }}
        </div>
      {% endif %}
      {% if successText %}
        <div class="alert alert-dismissible alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          {{ successText }}
        </div>
      {% endif %}
                        
                            <form action="" method="post" class="component_form_group component_checkbox">
                                <div class="">
                                                                                                            <div class="form-group">
                                        <label for="username" class="control-label">Tên đăng nhập</label>
                                        <input type="text" class="form-control" id="username" name="username" value="{{ data['username'] }}">
                                    </div><div class="mt-3">
                                                                            <div class="form-group">
                                            <label for="firstname" class="control-label">Họ tên</label>
                                            <input type="text" class="form-control" id="firstname" name="name" value="{{ data['name'] }}">
                                        </div><div class="mt-3">
                                       
                                                                        <div class="form-group">
                                        <label for="email" class="control-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" value="{{ data['email'] }}">
                                    </div><div class="mt-3">
                                                                            <div class="form-group">
                                            <label for="skype" class="control-label">Whatsapp No.</label>
                                            <input type="text" class="form-control" id="skype" name="telephone" value="{{ data['telephone'] }}">
                                        </div><div class="mt-3">
                                                                        <div class="form-group">
                                        <label for="password" class="control-label">Mật khẩu</label>
                                        <input type="password" class="form-control" id="password" name="password">
                                    </div><div class="mt-3">
                                    <div class="form-group">
                                        <label for="confirm" class="control-label">Xác nhận mật khẩu</label>
                                        <input type="password" class="form-control" id="confirm" name="password_again">
                                    </div><div class="mt-3">
                                                                            <div class="checkbox">
            <label>
              <input type="checkbox" name="terms" value="1"> {{ lang['signup.accept_terms_text'] }}
            </label>
          </div>
		   {% if captcha %}
            <div class="form-group">
              <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
            </div>
          {% endif %}
                                <div class="component_button_submit">
                                    <div class="form-group">
                                        <div class="">
                                            <button type="submit" class="btn btn-block btn-primary">Đăng ký</button>
                                        </div>
                                    </div>
                                </div><div class="mt-3">
                                <div class="text-center">Bạn đã có tài khoản?<a href="/" class="sign-up-center-signin-link">Đăng nhập</a></div>
                            </form>
                        </div>
